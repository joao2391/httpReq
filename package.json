{
  "name": "http-req",
  "publisher": "joaopaulo2391",
  "displayName": "HttpReq",
  "description": "Make HTTP requests (GET, POST, PUT, DELETE, PATCH) directly from VSCode. Supports a Postman-like UI for crafting requests.",
  "icon": "./assets/httpReq_vsce_icon.png", 
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.104.1"
  },
  "categories": [
    "Other",
    "Testing"
  ],
  "activationEvents": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/joao2391/httpReq"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "http-req.httpGet",
        "title": "HTTP GET Request"
      },
      {
        "command": "http-req.httpPost",
        "title": "HTTP POST Request"
      },
      {
        "command": "http-req.httpPut",
        "title": "HTTP PUT Request"
      },
      {
        "command": "http-req.httpDelete",
        "title": "HTTP DELETE Request"
      },
      {
        "command": "http-req.httpPatch",
        "title": "HTTP PATCH Request"
      },
      {
        "command": "http-req.openHttpClient",
        "title": "Open HTTP Client"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "node-fetch": "^3.3.2"
  }
}
